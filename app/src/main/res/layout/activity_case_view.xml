<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_case_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xxyoxx.erevna.case_view">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/poor" />

            <TextView
                android:id="@+id/tvc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvc1"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:text=" Details of Reporter"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ivc"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:text=" Amiteshwar Sidhu"
                android:textColor="@color/gold"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:text="Address     :"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:text="E-Mail        :"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:text="Afflicted Loc "
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/lon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:paddingLeft="38dp"
                                android:text="Long  :"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/lat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:paddingLeft="53dp"
                                android:text="Lat :"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/addressc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:paddingLeft="10dp"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/emailc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:paddingLeft="10dp"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/locationc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:paddingLeft="10dp"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/longc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:paddingLeft="10dp"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/latc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="20dp"
                                android:paddingLeft="10dp"
                                android:textColor="@color/gold"
                                android:textSize="15sp" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/navigate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:background="@color/gold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Navigate to location"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="normal|bold" />

                <Button
                    android:id="@+id/done"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:background="@color/gold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Mark as Resolved"
                    android:textAllCaps="true"
                    android:onClick="resolved"
                    android:textColor="@color/black"
                    android:textStyle="normal|bold" />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
